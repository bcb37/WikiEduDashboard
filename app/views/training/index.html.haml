.container.training
  %h1
    = I18n.t('training.training_library').pluralize
  %ul.training-libraries.no-bullets.no-margin
    - @libraries.each do |library|
      %li.training-libraries__individual-library.no-left-margin
        %a.action-card{href: "/training/#{library.slug}"}
          %header.action-card-header
            %h3.action-card-title
              = library.translations['es'].name
            %span.icon-container
              %i.action-card-icon.icon.icon-rt_arrow
          .action-card-text
            %h3 Included Modules:
            %ul
              - library.categories.collect(&:modules).flatten.each do |training_module|
                %li= training_module.name
